<div class="bg-form">
  <div class="row">
    <div class="callout-form">
      <div class="show-heading-2">Forgot your password?</div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "reset password" %>
        </div>
      <% end %>
    </div>

  <%= render "devise/shared/links" %>
  </div>

  <div class="footer">
    <img class="fork-knife-img" src="<%= asset_path('fork-knife.png') %>" width="60" />
  </div>

</div>
